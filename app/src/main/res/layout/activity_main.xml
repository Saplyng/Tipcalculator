<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:layout_width="215dp"
            android:layout_height="49dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/idMeal" android:layout_marginTop="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="@string/mealAmount"
            android:gravity="center_horizontal" android:selectAllOnFocus="true" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.5"/>
    <Spinner
            android:layout_width="153dp"
            android:layout_height="29dp"
            android:id="@+id/idSpinner"
            android:entries="@array/tipOptions"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.5"/>
    <TextView
            android:text="@string/mealText"
            android:layout_width="206dp"
            android:layout_height="32dp"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_horizontal"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/idMeal" app:layout_constraintHorizontal_bias="0.5"/>
    <TextView
            android:text="@string/tipAmount"
            android:layout_width="391dp"
            android:layout_height="20dp"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:gravity="center_horizontal"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/idMeal"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.5"/>
    <Button
            android:text="@string/calculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idButton"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/idSpinner" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.5"/>
    <TextView
            android:layout_width="324dp"
            android:layout_height="35dp"
            android:id="@+id/textResult" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/idButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.5"/>
    <ImageView
            android:layout_width="239dp"
            android:layout_height="168dp" app:srcCompat="@drawable/ic_cash"
            android:id="@+id/imageView" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textResult" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
</android.support.constraint.ConstraintLayout>